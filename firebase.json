{
  "hosting": {
    "public": "dist/sakai-ng",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/en/**",
        "destination": "/en/index.html"
      },
      {
        "source": "/ru/**",
        "destination": "/ru/index.html"
      },
      {
        "source": "/uz/**",
        "destination": "/uz/index.html"
      }
    ],
    "i18n": {
      "root": "/"
    }
  }
}
